#header
	%h3 MyDE
	= render 'form'

.cont
	- i = 0
	- @colors.each do |c|
		.win{:id => c.file}
			.head
				%li.name= c.file_file_name[/[^.]+/].tr('_-', ' ')
				= image_tag "icon/sublimetext_logo.png", :id => "sublimetext_logo"

			- @code.cont.each_line do |line|
				- i += 1
				.line
					%span= i
					%li.line= line
			- i = 0

			.foot
				%a{:href => c.file, :download => true} &#8595
				= image_tag "icon/git.svg", :class => "git_clone", :title => "git clone git://github.com/altercation/solarized.git"


